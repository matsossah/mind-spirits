<!-- Intro Section -->
<section class="full-screen-intro">

    <!-- Bg Image -->
    <div class="media-wapper bg-img cont-h-100per" style="background-image: url(<%= image_path(@cocktail.image) %>);">
    </div>
    <!-- End Bg Image -->

    <!-- Content -->
    <div class="full-cap-wraper overlay-dark80 light-color">
        <div class="content-caption light-color parallax parallax-opacity">
            <div class="container">
                <h1 class=""><%= @cocktail.name %></h1>
                <div class="row">
                    <h5 class="col-md-6 col-md-offset-3">Presented by Mind Spirit</h5>
                </div>
                <br>
                <div>
                  <% if user_signed_in? %>
                    <%= link_to "Find a Barman", new_user_event_path(current_user), class: "btn btn-md btn-white" %>
                  <% else %>
                    <%= link_to "Login to book a barman", new_user_session_path, class: "btn btn-md btn-white" %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
    <!-- End Content -->

    <!-- Intro Scroll Down -->
    <div class="intro-scroll-down">
        <a class="scroll-down" href="#about">
            <span class="mouse">
                <span class="mouse-dot"></span>
            </span>
        </a>
    </div>
    <!-- End Intro Scroll Down -->
</section>
<div class="clearfix"></div>
<!-- End Intro Section -->

<hr/>

<!-- Process -->
<section id="process" class="ptb ptb-sm-80">
    <div class="wow fadeInLeft container text-center">
      <h3>Ingredients</h3>
      <div class="spacer-60"></div>
      <div class="row">
        <% @cocktail.doses.each do |dose| %>
          <% if @cocktail.doses.first == dose %>
            <div class="col-md-2 col-md-offset-<%= @offset %> col-sm-4 col-xs-6">
                <div class="page-icon-top"><i class="ion ion-ios-people-outline"></i></div>
                <h6><%= dose.ingredient.name %>: <%= dose.quantity %></h6>
            </div>
          <% else %>
            <div class="col-md-2 col-sm-4 col-xs-6">
              <div class="page-icon-top"><i class="ion ion-ios-people-outline"></i></div>
              <h6><%= dose.ingredient.name %>: <%= dose.quantity %></h6>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
</section>
<!-- End Process -->

<hr />

<section id="about" class="wow fadeIn ptb ptb-sm-80">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-8 col-md-offset-2">
                <h3 class="h4">Recipe</h3>
                <div class="spacer-15"></div>
                <p class="lead"><%= @cocktail.recipe_steps %></p>
            </div>
        </div>
    </div>
</section>

<a class="scroll-top">
    <i class="fa fa-angle-double-up"></i>
</a>


