<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path("cocktails.jpg") %>);">
  <div class="banner-content">
    <div class="container cocktail-form">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.error_notification %>

        <%= f.input :name %>
        <%= f.input :image %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>

