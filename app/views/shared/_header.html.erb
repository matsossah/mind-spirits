<!-- HEADER -->
<header class="header">
    <div class="container">

        <!-- logo -->
        <div class="logo">
          <%= link_to "Mind Spirit", root_path, style:"font-family:'Alex Brush',cursive;font-size: 20px;" %>
        </div>
        <!--End logo-->

        <!-- Navigation Menu -->
        <nav class='navigation'>
        <% if user_signed_in? %>
          <% if current_user.admin %>
            <ul>
                <li>
                    <a href=""><%= current_user.name %></a>
                    <!-- Nav Dropdown -->
                    <ul class="nav-dropdown">
                        <li>
                          <%= link_to user_path(current_user) do %>
                            <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
                          <% end %>
                        </li>
                        <li>
                          <%= link_to root_path do %>
                            <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
                          <% end %>
                        </li>
                        <li>
                          <%= link_to rails_admin_path do %>
                            <i class="fa fa-cogs"></i>  <%= t ".profile", default: "Admin" %>
                          <% end %>
                        </li>
                        <li>
                          <%= link_to destroy_user_session_path, method: :delete do %>
                            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
                          <% end %>
                        </li>
                    </ul>
                    <!-- End Nav Dropdown -->
                </li>
            </ul>
          <% else %>
            <ul>
                <li>
                    <a href=""><%= current_user.name %></a>
                    <!-- Nav Dropdown -->
                    <ul class="nav-dropdown">
                        <li >
                          <%= link_to user_path(current_user) do %>
                            <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
                          <% end %>
                        </li>
                        <li>
                          <%= link_to root_path do %>
                            <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
                          <% end %>
                        </li>
                        <li>
                          <%= link_to destroy_user_session_path, method: :delete do %>
                            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
                          <% end %>
                        </li>
                    </ul>
                    <!-- End Nav Dropdown -->
                </li>
            </ul>
          <% end %>
        <% else %>
          <ul>
            <li>
              <%= link_to "LOGIN", new_user_session_path %>
            </li>
            <li>
              <%= link_to "SIGN UP", new_user_registration_path %>
            </li>
          </ul>
        <% end %>
        </nav>
        <!--End Navigation Menu -->
    </div>
</header>
<!-- END HEADER -->
