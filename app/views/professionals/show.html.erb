<section class="inner-intro bg-img2 overlay-light parallax parallax-background2">
    <div class="container">
        <div class="row title">
            <h2 class="h2"><%= current_user.name %></h2>
            <div class="page-breadcrumb">
                <a>Home</a>/<span>Professional profile</span>
            </div>
        </div>
    </div>
</section>
<div class="clearfix"></div>
        <!-- End Intro Section -->
          <!-- About Section -->
<section class="ptb ptb-sm-80">

</section>

  <!-- Team -->






<section class="pb pb-sm-80">
  <div class="container">
          <!--Team Carousel -->
    <div class="row">

      <div class="col-md-4">
        <div class="item">
          <div class="team-item nf-col-padding">
            <div class="team-item-img">
              <%= image_tag "leo.jpg", alt:"professional picture" %>
              <div class="team-item-detail">
                <div class="team-item-detail-inner light-color">
                  <h5><%= current_user.name %></h5>
                  <ul class="list-unstyled">
                    <li class="profile-title"><i class="fa fa-envelope-o"></i>  <%= current_user.email%></li>
                    <li class="profile-title"><i class="fa fa-chevron-circle-right"></i> <%= @professional.description%></li>
                    <%  if @professional.phone_number %>
                    <li class="profile-title"><i class="fa fa-phone"></i>  <%= @professional.phone_number%></li>
                    <% end %>
                    <% if @professional.business_address %>
                    <li class="profile-title"><i class="fa fa-map-marker"></i>  <%= @professional.business_address%></li>
                    <% end %>
                  </ul>
                  <ul class="social">
                    <li><a href="https://www.facebook.com/" target="_blank"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="https://www.twitter.com/" target="_blank"><i class="fa fa-twitter"></i></a></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="container text-center">
          <div class="row text-center">
            <div class="col-md-4">
              <div class="page-icon-top"><i class="fa fa-ticket"></i></div>
               <%= link_to "Next event", new_user_event_path(current_user), class:"btn btn-xd btn-color-line"%>
            </div>
            <div class="col-md-4">
              <div class="page-icon-top"><i class="fa fa-calendar-check-o"></i></div>
              <%= link_to "Your events", user_events_path(current_user), class:"btn btn-xd btn-color-line"%>
            </div>
          </div>
          <br>
          <br>
          <div class="row text-center">
            <div class="col-md-4">
              <div class="page-icon-top"><i class="fa fa-user"></i></div>
              <%= link_to "Edit your profile", edit_user_professional_path(current_user), class:"btn btn-xd btn-color-line"%>
            </div>
            <div class="col-md-4">
              <div class="page-icon-top"><i class="fa fa-child"></i></div>
                <%= link_to "Back to user profile", user_path(current_user), class:"btn btn-xd btn-color-line"%>
            </div>
          </div>
        </div>
      </div>


                <!--End Team Carousel -->
    </div>
  </div>
</section>
<!-- End Team -->




<!-- Testimonials -->
<section id="testimonial" class="overlay-dark80 dark-bg ptb ptb-sm-80" style="background-image: url('img/full/25.jpg');" data-stellar-background-ratio="0.4">
    <div class="container">
        <div class="owl-carousel testimonial-carousel nf-carousel-theme white">
            <div class="item">
                <div class="testimonial text-center dark-color">
                    <div class="container-icon"><i class="fa fa-quote-right"></i></div>
                    <% if current_user.professional.reviews.empty? %>
                    <p> No reviews...</p>
                    <% else %>
                    <p>"<%= current_user.professional.reviews.last.content %>"</p>
                    <h6 class="quote-author"><%=  current_user.professional.reviews.last.reviewer.name %></h6>
                    <% end %>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- End Testimonials -->








































<div class="banner">
  <div class="show-user">
    <%= render 'shared/navbar' %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <div class="profil">
            <%= image_tag current_user.picture, class:"profile-img"%>
            <div class="profile-text">
              <h1 class="profile-name"><%= current_user.name%></h1>
              <h6>Professional account</h6>
              <div>
                <ul>
                  <li class="profile-title" >
                      <i class="fa fa-chevron-circle-right"></i> <%= @professional.description%>
                  </li>
                  <li class="profile-title">
                    <i class="fa fa-envelope-o"></i>  <%= current_user.email%>
                  </li>
                  <li class="profile-title">
                    <i class="fa fa-phone"></i>  <%= @professional.phone_number%>
                  </li>
                  <li class="profile-title">
                    <i class="fa fa-map-marker"></i>  <%= @professional.business_address %>
                  </li>
                </ul>
              </div>
              <%= link_to "Edit my professional profile", edit_user_professional_path(current_user, @professional), id:"edit"%>
              <hr>
              <div class="login_btn">
                <%= link_to "go to User profile", user_path(current_user), id:"log" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="user-content">
          <h3>Events</h3>
            <% if @professional.events.empty? %>
              <h5>You don't have any events yet</h5>
            <% else %>
              <% @professional.events.each do |event| %>
                <div>
                  <ul>
                    <li><%= User.find(event.user_id).name %></li>
                    <li><%= event.start_time.to_formatted_s(:long_ordinal) %></li>
                    <li><%= event.address %></li>
                  </ul>
                  <% if event.professional_review_id.nil? %>
                    <div class="reviews-form">
                      <%= render 'reviews/form', event: event %>
                    </div>
                  <% else %>
                    <%= Review.find(event.professional_review_id).rating %>
                    <%= Review.find(event.professional_review_id).content %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-3">
          <h3>Reviews</h3>
          <% if @professional.reviews.empty? %>
            <h5>You don't have any reviews yet</h5>
          <% else %>
            <% @professional.reviews.each do |review| %>
              <ul>
                <li><%= review.rating %></li>
                <li><%= review.content %></li>
              </ul>
            <% end %>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>


