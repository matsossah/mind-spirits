<section class="inner-intro bg-imgparty overlay-dark light-color parallax parallax-background2">
    <div class="container">
        <div class="row title">
            <h2 class="h2">Register as professional</h2>
        </div>
    </div>
</section>
<div class="clearfix"></div>



<!-- End Intro Section -->
<section id="Pricing" class="ptb ptb-sm-80">
  <div class="container">
    <div class="col-xs-12 col-sm-6  col-sm-offset-3">

        <h2>Register</h2>

        <%= simple_form_for([current_user, @professional]) do |f| %>
          <%= f.error_notification %>

          <div class="form-field-wrapper">
            <%= f.input :professional_role, collection: Professional.professional_role.options %>
            <%= f.input :description, placeholder:'Good listener, 5 years of experience...etc' %>
            <%= f.input :max_travel_range, placeholder:'Maximum distance to an event (in km)' %>
            <%= f.input :phone_number, placeholder:'0123456789' %>
            <%= f.input :business_address, input_html: { id: "user_input_autocomplete_address"}, placeholder: "Your business address" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Register", class:"btn btn-md btn-color-line"%>
            <%= link_to "cancel", user_path(current_user), style:"margin-left: 10px;" %>
          </div>
        <% end %>

    </div>
  </div>
</section>
