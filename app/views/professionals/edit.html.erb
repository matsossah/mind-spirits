<div class="banner">
  <%= render "shared/navbar" %>
  <div class="container">
    <div class="col-xs-12 col-sm-6  col-sm-offset-3">
      <div class="login">
        <h2>Edit your profile</h2>

        <%= simple_form_for([current_user, @professional]) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :professional_role, collection: Professional.professional_role.options %>
            <%= f.input :description, label: false %>
            <%= f.input :max_travel_range, label: false %>
            <%= f.input :phone_number, label: false %>
            <%= f.input :business_address, input_html: { id: "user_input_autocomplete_address"}, label: false %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Edit" %>
            <%= link_to "cancel", user_professional_path(current_user, @professional) %>
          </div>
        <% end %>
        <hr>
      </div>
    </div>
  </div>
</div>
